{
  "name": "uranium-sdk-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.1",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "postbuild": "bun run scripts/update-sizes.ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean && rm -rf node_modules",
    "format:check": "biome format",
    "check": "turbo run lint && turbo run format",
    "size": "bun run scripts/calculate-sizes.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@types/bun": "latest",
    "bun-types": "latest",
    "turbo": "^2.5.8",
    "typescript": "^5.3.0"
  }
}
