{
  "name": "@uranium/sdk",
  "version": "0.1.0",
  "type": "module",
  "description": "Core SDK for Uranium platform",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun run clean && bun run build:types && bun run build:js",
    "build:types": "./node_modules/.bin/tsc --emitDeclarationOnly",
    "build:js": "bun run build.ts",
    "dev": "bun --watch ./src/index.ts",
    "test": "bun test",
    "lint": "biome check . --diagnostic-level=error",
    "lint:fix": "biome check . --write --diagnostic-level=error",
    "format": "biome format --write .",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "prepublishOnly": "bun run lint && bun run build && bun test"
  },
  "dependencies": {
    "@uranium/types": "workspace:*",
    "axios": "^1.6.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@uranium/configs": "workspace:*",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "uranium",
    "sdk",
    "nft",
    "blockchain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/urnm/uranium-sdk.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/urnm/uranium-sdk/issues"
  },
  "homepage": "https://github.com/urnm/uranium-sdk#readme",
  "author": "Uranium",
  "license": "Apache-2.0"
}
